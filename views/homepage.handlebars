{{#each posts as |post| }}
<div  class="row mb-4 project new-project-form" data-id={{post.id}}>
  <div class="col-md-5">
    <h2>
      <a href="/posts/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>Created by {{post.writer.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p id="post-desc">
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}