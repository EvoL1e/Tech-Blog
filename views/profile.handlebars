<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.user_name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a post:</h3>

    <form class="form new-post">
      <div class="form-group">
        <label for="title">title:</label>
        <input class="form-input" type="text" id="title" name="title" />
      </div>
      
      <div class="form-group">
        <label for="description">Description:</label>
        <input class="form-input" id="description" name="description"></input>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/posts/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


<script src="/public/js/userProfile.js"></script>